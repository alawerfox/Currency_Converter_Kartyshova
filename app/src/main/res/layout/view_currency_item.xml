<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/item_layout_padding"
    android:layout_margin="@dimen/item_layout_margin"
    android:background="@drawable/bg_currency_item">

    <TextView
        android:id="@+id/currency_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="ru"
        android:textAllCaps="true"
        android:textSize="@dimen/item_name_text_size"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/currency_item_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1243123"
        android:textSize="@dimen/item_value_text_size"
        android:layout_marginTop="@dimen/item_margin"
        android:layout_gravity="center_horizontal" />

</LinearLayout>